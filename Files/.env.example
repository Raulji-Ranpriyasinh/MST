# Flask secret key — generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-a-random-32-byte-hex-string

# Database connection string
DATABASE_URL=mysql+pymysql://root:8888@localhost/exam

# JWT secret key — generate with: python -c "import secrets; print(secrets.token_hex(32))"
JWT_SECRET_KEY=change-me-to-a-random-32-byte-hex-string

# JWT access token expiry in seconds (default 2 hours)
JWT_ACCESS_TOKEN_EXPIRES=7200

# PDF server
PDF_SERVER_URL=http://localhost:3000
PDF_TOKEN_SECRET=change-me-to-a-random-32-byte-hex-string
PDF_TOKEN_TIMEOUT=60

# Session cookie security (set to True when using HTTPS)
SESSION_COOKIE_SECURE=False

# Flask origin (used by Node PDF server for CORS)
FLASK_ORIGIN=http://localhost:5000

# Rate limiting
RATELIMIT_DEFAULT=200 per day
RATELIMIT_STORAGE_URI=memory://
